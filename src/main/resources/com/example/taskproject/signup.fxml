<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" prefWidth="1000" prefHeight="600">
    <left>
        <VBox alignment="CENTER_LEFT" spacing="15" styleClass="left-pane" prefWidth="500">
            <padding>
                <Insets top="50" left="50" right="50" bottom="50"/>
            </padding>

            <Label text="Explore the world to experience the beauty of nature" styleClass="heading" wrapText="true"/>
            <Label text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Morbi lobortis maximus"
                   styleClass="subtext" wrapText="true"/>

            <Button text="Continue with Google" styleClass="social-btn">
                <graphic>
                    <ImageView fitHeight="18" fitWidth="18">
                        <image>
                            <Image url="@icons/google.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button text="Continue with Facebook" styleClass="social-btn">
                <graphic>
                    <ImageView fitHeight="18" fitWidth="18">
                        <image>
                            <Image url="@icons/facebook.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <Button text="Continue with Apple" styleClass="social-btn">
                <graphic>
                    <ImageView fitHeight="18" fitWidth="18">
                        <image>
                            <Image url="@icons/apple.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <HBox alignment="CENTER" spacing="10">
                <Separator prefWidth="100"/>
                <Label text="OR"/>
                <Separator prefWidth="100"/>
            </HBox>

            <Button text="Sign up with email" styleClass="signup-btn"/>

            <Label text="By signing up, you agree to the Terms of Service and Privacy Policy, including cookie use."
                   styleClass="footer-text" wrapText="true"/>
        </VBox>
    </left>

    <right>
        <ImageView fitWidth="500" fitHeight="600" preserveRatio="false">
            <image>
                <Image url="@image/van.png"/>
            </image>
        </ImageView>
    </right>
</BorderPane>
