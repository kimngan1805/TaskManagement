<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.taskproject.ProjectDetailController">

    <!-- Header Section -->
    <top>
        <VBox styleClass="project-header" prefHeight="220.0">
            <!-- Top Navigation -->
            <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="top-nav">
                <HBox alignment="CENTER_LEFT" spacing="10.0" HBox.hgrow="ALWAYS">
                    <Button fx:id="backButton" styleClass="back-button" text="← Back" />
                    <Label styleClass="breadcrumb-text" text="Projects > Project Details" />
                </HBox>

                <!-- User Profile -->
                <HBox alignment="CENTER" spacing="12.0" styleClass="user-section">
                    <VBox alignment="CENTER_RIGHT" spacing="2.0">
                        <Label styleClass="user-name" text="Osama.A" />
                        <Label styleClass="user-role" text="Teacher" />
                    </VBox>
                    <HBox alignment="CENTER" styleClass="user-avatar">
                        <Label styleClass="avatar-text" text="O" />
                    </HBox>
                </HBox>
            </HBox>

            <!-- Project Title Section -->
            <VBox spacing="16.0" styleClass="title-section">
                <HBox alignment="CENTER_LEFT" spacing="12.0">
                    <Label styleClass="project-title" text="Intro To AI" />
                    <Label styleClass="project-category" text="🤖 Algorithm" />
                </HBox>

                <!-- Project Meta Information -->
                <GridPane hgap="20.0" vgap="12.0" styleClass="meta-grid">
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>

                    <VBox alignment="CENTER_LEFT" spacing="4.0" styleClass="meta-item" GridPane.columnIndex="0">
                        <Label styleClass="meta-icon" text="🗓️" />
                        <Label styleClass="meta-label" text="Start Date" />
                        <Label styleClass="meta-value" text="Mar 15, 2024" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="4.0" styleClass="meta-item" GridPane.columnIndex="1">
                        <Label styleClass="meta-icon" text="📅" />
                        <Label styleClass="meta-label" text="Due Date" />
                        <Label styleClass="meta-value" text="Mar 30, 2024" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="4.0" styleClass="meta-item" GridPane.columnIndex="2">
                        <Label styleClass="meta-icon" text="👥" />
                        <Label styleClass="meta-label" text="Students" />
                        <Label styleClass="meta-value" text="8 Students" />
                    </VBox>

                    <VBox alignment="CENTER_LEFT" spacing="4.0" styleClass="meta-item" GridPane.columnIndex="3">
                        <Label styleClass="meta-icon" text="⏱️" />
                        <Label styleClass="meta-label" text="Duration" />
                        <Label styleClass="meta-value" text="45 Minutes" />
                    </VBox>
                </GridPane>
            </VBox>
        </VBox>
    </top>

    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="main-scroll">
            <VBox spacing="24.0" styleClass="main-content">

                <!-- Action Buttons -->
                <HBox spacing="16.0" styleClass="action-section">
                    <Button fx:id="startProjectBtn" styleClass="btn-primary" text="🚀 Start Project" />
                    <Button fx:id="editDetailsBtn" styleClass="btn-secondary" text="✏️ Edit Details" />
                </HBox>

                <!-- Content Grid -->
                <GridPane hgap="24.0" vgap="24.0" styleClass="content-grid">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="65.0" />
                        <ColumnConstraints percentWidth="35.0" />
                    </columnConstraints>

                    <!-- Project Description Card -->
                    <VBox spacing="20.0" styleClass="content-card" GridPane.columnIndex="0">
                        <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="card-header">
                            <HBox alignment="CENTER" styleClass="card-icon">
                                <Label styleClass="icon-text" text="📋" />
                            </HBox>
                            <Label styleClass="card-title" text="Project Description" />
                        </HBox>

                        <Label styleClass="description-text" text="This comprehensive AI introduction project will guide students through the fundamental concepts of artificial intelligence, machine learning, and neural networks. Students will explore real-world applications and gain hands-on experience with AI tools and techniques." wrapText="true" />

                        <!-- Progress Section -->
                        <VBox spacing="12.0" styleClass="progress-section">
                            <HBox alignment="CENTER_LEFT" spacing="12.0">
                                <Label styleClass="progress-label" text="📈 Project Progress" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label styleClass="progress-value" text="85%" />
                            </HBox>
                            <ProgressBar fx:id="projectProgress" progress="0.85" styleClass="custom-progress-bar" />
                        </VBox>
                    </VBox>

                    <!-- Recent Activities Card -->
                    <VBox spacing="20.0" styleClass="content-card" GridPane.columnIndex="1">
                        <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="card-header">
                            <HBox alignment="CENTER" styleClass="card-icon">
                                <Label styleClass="icon-text" text="⚡" />
                            </HBox>
                            <Label styleClass="card-title" text="Recent Activities" />
                        </HBox>

                        <VBox spacing="16.0" styleClass="activities-list">
                            <!-- Activity Item 1 -->
                            <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="activity-item">
                                <HBox alignment="CENTER" styleClass="activity-icon activity-created">
                                    <Label styleClass="activity-icon-text" text="📝" />
                                </HBox>
                                <VBox spacing="2.0">
                                    <Label styleClass="activity-text" text="Project created" />
                                    <Label styleClass="activity-time" text="2 hours ago" />
                                </VBox>
                            </HBox>

                            <!-- Activity Item 2 -->
                            <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="activity-item">
                                <HBox alignment="CENTER" styleClass="activity-icon activity-enrolled">
                                    <Label styleClass="activity-icon-text" text="👥" />
                                </HBox>
                                <VBox spacing="2.0">
                                    <Label styleClass="activity-text" text="8 students enrolled" />
                                    <Label styleClass="activity-time" text="1 hour ago" />
                                </VBox>
                            </HBox>

                            <!-- Activity Item 3 -->
                            <HBox alignment="CENTER_LEFT" spacing="12.0" styleClass="activity-item">
                                <HBox alignment="CENTER" styleClass="activity-icon activity-completed">
                                    <Label styleClass="activity-icon-text" text="✅" />
                                </HBox>
                                <VBox spacing="2.0">
                                    <Label styleClass="activity-text" text="First milestone completed" />
                                    <Label styleClass="activity-time" text="30 minutes ago" />
                                </VBox>
                            </HBox>
                        </VBox>
                    </VBox>
                </GridPane>

                <!-- Task Management Section -->
                <VBox spacing="0" styleClass="task-section">
                    <!-- Task Header -->
                    <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="task-header">
                        <HBox alignment="CENTER_LEFT" spacing="12.0">
                            <HBox alignment="CENTER" styleClass="card-icon">
                                <Label styleClass="icon-text" text="📋" />
                            </HBox>
                            <Label styleClass="task-title" text="Task Management" />
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="addTaskBtn" styleClass="add-task-button" text="+ Add Task" />
                    </HBox>

                    <!-- Task Table -->
                    <TableView fx:id="taskTable" styleClass="custom-table">
                        <columns>
                            <TableColumn fx:id="taskNameColumn" text="Task Name" prefWidth="150.0" />
                            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200.0" />
                            <TableColumn fx:id="assignedToColumn" text="Assigned To" prefWidth="120.0" />
                            <TableColumn fx:id="startDateColumn" text="Start Date" prefWidth="100.0" />
                            <TableColumn fx:id="dueDateColumn" text="Due Date" prefWidth="100.0" />
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="80.0" />
                            <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="100.0" />
                        </columns>
                        <placeholder>
                            <VBox alignment="CENTER" spacing="16.0" styleClass="empty-state">
                                <Label styleClass="empty-icon" text="📝" />
                                <Label styleClass="empty-text" text="No tasks yet" />
                                <Label styleClass="empty-subtext" text="Create your first task to get started" />
                            </VBox>
                        </placeholder>
                    </TableView>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>
</BorderPane>